scrape_configs:
- job_name: prometheus
  scrape_interval: 15s
  scrape_timeout: 10s
  metrics_path: /metrics
  scheme: http
  static_configs:
  - targets:
    - localhost:9090
- job_name: zb
  scrape_interval: 1s
  metrics_path: /zeebe.prom
  scheme: http
  static_configs:
  - targets:
{{ zeebe_brokers_to_monitor }}
- job_name: os_metrics
  scrape_interval: 10s
  scrape_timeout: 7s
  metrics_path: /metrics
  scheme: http
  static_configs:
  - targets:
{{ os_brokers_to_monitor }}